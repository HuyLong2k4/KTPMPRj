<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1200" prefHeight="800">

    <!-- Top Menu Bar -->
    <top>
        <VBox spacing="10">
            <children>
                <HBox fx:id="menuBar" spacing="10" alignment="CENTER_LEFT"
                      style="-fx-border-color: black; -fx-border-width: 2;">
                    <children>
                        <Button fx:id="btnHome" text="Trang chủ" />
                        <Button fx:id="btnCanHo" text="Căn hộ" />
                        <Button fx:id="btnCuDan" text="Cư dân" />
                        <Button fx:id="btnKhoanThu" text="Khoản thu" />
                        <Button fx:id="btnThongKe" text="Thống kê" />
                        <Button fx:id="btnCaiDat" text="Cài đặt" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="searchField" promptText="Tìm kiếm" prefWidth="200" onAction="#onSearch" />
                        <Button fx:id="btnSearch" text="🔍" onAction="#onSearch" />
                        <Button fx:id="btnClearSearch" text="✕" onAction="#onClearSearch" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="30">
            <children>
                <Label text="THỐNG KÊ CÁC KHOẢN ĐÃ ĐÓNG GÓP"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <TableView fx:id="tableView" prefHeight="400" prefWidth="1100">
                    <columns>
                        <TableColumn fx:id="colDauMuc" text="Đầu mục" prefWidth="180" />
                        <TableColumn fx:id="colTrangThai" text="Trạng thái" prefWidth="130" />
                        <TableColumn fx:id="colMoTa" text="Mô tả" prefWidth="220" />
                        <TableColumn fx:id="colSoNguoi" text="Số người đã đóng" prefWidth="170" />
                        <TableColumn fx:id="colTienDo" text="Tiến độ" prefWidth="170" />
                        <TableColumn fx:id="colKhac" text="Khác" prefWidth="170" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>

    <!-- Bottom Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="40" padding="Insets(20.0)">
            <Button text="Tạo khoản thu" prefWidth="300" style="-fx-background-color: #e5e5e5; -fx-border-color: black; -fx-border-radius: 5;" />
            <Button text="Thu phí" prefWidth="300" style="-fx-background-color: #e5e5e5; -fx-border-color: black; -fx-border-radius: 5;" />
            <Button text="Xuất báo cáo" prefWidth="300" style="-fx-background-color: #e5e5e5; -fx-border-color: black; -fx-border-radius: 5;" />
        </HBox>
    </bottom>

</BorderPane>
