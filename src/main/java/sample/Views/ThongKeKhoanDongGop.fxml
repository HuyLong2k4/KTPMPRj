<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controllers.ThongKeKhoanDongGopController" prefWidth="1200" prefHeight="800">
    <!-- Top Menu Bar -->
    <top>
        <VBox spacing="10">
    <!-- Main Menu Bar -->
    <HBox fx:id="menuBar" spacing="0" alignment="CENTER_LEFT" style="-fx-border-color: #999; -fx-border-width: 0 0 2 0; -fx-background-color: #f5f5f5;">
    <Button fx:id="btnHome" text="Trang chủ" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 8 18; -fx-font-size: 14px; -fx-text-fill: #222;" />
    <Button fx:id="btnCanHo" text="Căn hộ" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 8 18; -fx-font-size: 14px; -fx-text-fill: #222;" />
    <Button fx:id="btnCuDan" text="Cư dân" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 8 18; -fx-font-size: 14px; -fx-text-fill: #222;" />
    <Button fx:id="btnKhoanThu" text="Khoản thu" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 8 18; -fx-font-size: 14px; -fx-text-fill: #222;" />
    <Button fx:id="btnThongKe" text="Thống kê" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 8 18; -fx-font-size: 14px; -fx-text-fill: #222;" />
    <Region HBox.hgrow="ALWAYS" />
    <TextField fx:id="searchField" promptText="Tìm kiếm..." prefWidth="200" onAction="#onSearch" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-background-color: #fff; -fx-border-color: #ccc;" />
    <Button fx:id="btnSearch" text="🔍" onAction="#onSearch" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 8 10;" />
    <Button fx:id="btnClearSearch" text="✕" onAction="#onClearSearch" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 8 10;" />
</HBox>
</VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="30">
            <Label text="THỐNG KÊ CÁC KHOẢN ĐÃ ĐÓNG GÓP" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <TableView prefHeight="400" prefWidth="1100">
                <columns>
                    <TableColumn text="Đầu mục" prefWidth="180" />
                    <TableColumn text="Trạng thái" prefWidth="130" />
                    <TableColumn text="Mô tả" prefWidth="220" />
                    <TableColumn text="Số người đã đóng" prefWidth="170" />
                    <TableColumn text="Tiến độ" prefWidth="170" />
                    <TableColumn text="Khác" prefWidth="170" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="40">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
            <Button text="Tạo khoản thu" prefWidth="300" style="-fx-background-color: #e5e5e5; -fx-border-color: black; -fx-border-radius: 5;" />
            <Button text="Thu phí" prefWidth="300" style="-fx-background-color: #e5e5e5; -fx-border-color: black; -fx-border-radius: 5;" />
            <Button text="Xuất báo cáo" prefWidth="300" style="-fx-background-color: #e5e5e5; -fx-border-color: black; -fx-border-radius: 5;" />
        </HBox>
    </bottom>
</BorderPane>
