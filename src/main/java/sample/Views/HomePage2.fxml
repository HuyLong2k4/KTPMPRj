<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane"
            prefHeight="600" prefWidth="900"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.sample.Controller.HomePageController2">

   <!-- Top: Navigation -->
   <top>
      <HBox spacing="0">
         <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
         </padding>
         <children>
            <!-- Mỗi Label chiếm chiều ngang đều nhau -->
            <Label fx:id="lblTrangChu"
                   text="Trang chủ"
                   style="-fx-font-weight: bold; -fx-text-fill: #2980b9; -fx-font-family: 'Arial', 'Segoe UI', sans-serif;"
                   HBox.hgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER">
               <font><Font size="24"/></font>
            </Label>

            <Label fx:id="lblHoKhau"
                   text="Hộ khẩu"
                   onMouseClicked="#handleHoKhauClick"
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-family: 'Arial', 'Segoe UI', sans-serif;"
                   HBox.hgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER">
               <font><Font size="24"/></font>
            </Label>

            <Label fx:id="lblNhanKhau"
                   text="Nhân khẩu"
                   onMouseClicked="#handleNhanKhauClick"
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-family: 'Arial', 'Segoe UI', sans-serif;"
                   HBox.hgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER">
               <font><Font size="24"/></font>
            </Label>

            <Label fx:id="lblKhoanThu"
                   text="Khoản thu"
                   onMouseClicked="#handleKhoanThuClick"
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-family: 'Arial', 'Segoe UI', sans-serif;"
                   HBox.hgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER">
               <font><Font size="24"/></font>
            </Label>

            <Label fx:id="lblNopPhi"
                   text="Nộp Phí"
                   onMouseClicked="#handleNopPhiClick"
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-family: 'Arial', 'Segoe UI', sans-serif;"
                   HBox.hgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER">
               <font><Font size="24"/></font>
            </Label>

            <Label fx:id="lblThongKe"
                   text="Thống kê"
                   onMouseClicked="#handleThongKeClick"
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-family: 'Arial', 'Segoe UI', sans-serif;"
                   HBox.hgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER">
               <font><Font size="24"/></font>
            </Label>

            <!-- Spacer đẩy ô tìm kiếm sang phải -->
            <Region HBox.hgrow="ALWAYS"/>

            <TextField fx:id="txtGlobalSearch"
                       promptText="Tìm kiếm..."
                       style="-fx-font-family: 'Arial', 'Segoe UI', sans-serif; -fx-font-size: 15px;"
                       maxWidth="300"/>
         </children>
      </HBox>
   </top>

   <!-- Center -->
   <center>
      <VBox spacing="20">
         <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
         </padding>
         <HBox spacing="20">
            <VBox spacing="5"
                  style="-fx-border-color: black; -fx-border-width: 1;"
                  HBox.hgrow="ALWAYS" maxWidth="Infinity">
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10"/>
               </padding>
               <Label text="Hộ Khẩu">
                  <font><Font size="20"/></font>
               </Label>
               <Label fx:id="lblTongSoHoKhau" text="Tổng số: 0">
                  <font><Font size="16"/></font>
               </Label>
               <Button fx:id="btnHoKhau"
                       onMouseClicked="#handleHoKhauClickBtn"
                       text="Xem tất cả"
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-family: 'Arial', 'Segoe UI', sans-serif; -fx-font-size: 15px;">
                  <font><Font size="20"/></font>
               </Button>
               <VBox.vgrow>
                  <Priority fx:value="ALWAYS"/>
               </VBox.vgrow>
            </VBox>
            <VBox spacing="5"
                  style="-fx-border-color: black; -fx-border-width: 1;"
                  HBox.hgrow="ALWAYS" maxWidth="Infinity">
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10"/>
               </padding>
               <Label text="Nhân Khẩu">
                  <font><Font size="20"/></font>
               </Label>
               <Label fx:id="lblTongSoNhanKhau" text="Tổng số: 0">
                  <font><Font size="16"/></font>
               </Label>
               <Button fx:id="btnNhanKhau"
                       onMouseClicked="#handleNhanKhauClickBtn"
                       text="Xem tất cả"
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-family: 'Arial', 'Segoe UI', sans-serif; -fx-font-size: 15px;">
                  <font><Font size="20"/></font>
               </Button>
               <VBox.vgrow>
                  <Priority fx:value="ALWAYS"/>
               </VBox.vgrow>
            </VBox>
            <VBox spacing="5"
                  style="-fx-border-color: black; -fx-border-width: 1;"
                  HBox.hgrow="ALWAYS" maxWidth="Infinity">
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10"/>
               </padding>
               <Label text="Khoản thu">
                  <font><Font size="20"/></font>
               </Label>
               <Label fx:id="lblTongSoKhoanThu" text="Tổng số: 0">
                  <font><Font size="16"/></font>
               </Label>
               <Button fx:id="btnKhoanThu"
                       onMouseClicked="#handleKhoanThuClickBtn"
                       text="Xem tất cả"
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-family: 'Arial', 'Segoe UI', sans-serif; -fx-font-size: 15px;">
                  <font><Font size="20"/></font>
               </Button>
               <VBox.vgrow>
                  <Priority fx:value="ALWAYS"/>
               </VBox.vgrow>
            </VBox>
         </HBox>
         <HBox spacing="20">
            <VBox spacing="10"
                  HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <Label text="Lịch sử thu phí" />
               <LineChart title="Payment History"
                          VBox.vgrow="ALWAYS">
                  <xAxis>
                     <CategoryAxis label="Tháng"/>
                  </xAxis>
                  <yAxis>
                     <NumberAxis label="Số tiền"/>
                  </yAxis>
               </LineChart>
            </VBox>
            <VBox spacing="10"
                  style="-fx-border-color: gray; -fx-border-width: 1;"
                  HBox.hgrow="SOMETIMES" maxHeight="Infinity">
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10"/>
               </padding>
               <Label text="Khoản thu mới cập nhật" />
               <Label text="Khoản thu 1: 500.000đ" />
               <Label text="Khoản thu 2: 750.000đ" />
               <Label text="Khoản thu 3: 1.000.000đ" />
               <Separator />
               <Label text="Biến động dân cư" />
               <Label text="Căn hộ A1: -1" />
               <Label text="Căn hộ B2: +2" />
               <VBox.vgrow>
                  <Priority fx:value="ALWAYS"/>
               </VBox.vgrow>
            </VBox>
         </HBox>
      </VBox>
   </center>

   <bottom>
      <HBox alignment="CENTER" spacing="15">
         <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
         </padding>
         <Button fx:id="btnDSNopPhi"
                 onMouseClicked="#handleDSNopPhiClickBtn"
                 text="Danh sách nộp phí"
                 style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-family: 'Arial', 'Segoe UI', sans-serif; -fx-font-size: 15px;"
                 HBox.hgrow="SOMETIMES"/>
         <Button fx:id="btnNopPhi"
                 onMouseClicked="#handleNopPhiClickBtn"
                 text="Nộp phí"
                 style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-family: 'Arial', 'Segoe UI', sans-serif; -fx-font-size: 15px;"
                 HBox.hgrow="SOMETIMES"/>
      </HBox>
   </bottom>
</BorderPane>
