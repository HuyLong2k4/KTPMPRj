<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.sample.Controller.CanHoController"
            prefHeight="600.0" prefWidth="1000.0">

    <top>
        <HBox spacing="20">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <children>
                <Label text="Trang chủ"/>
                <Label text="Căn hộ"/>
                <Label text="Cư dân"/>
                <Label text="Khoản thu"/>
                <Label text="Thống kê"/>
                <Label text="Cài đặt"/>
                <TextField fx:id="txtGlobalSearch" promptText="Tìm kiếm..." prefWidth="200"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <HBox spacing="10">
                <TextField fx:id="txtSearch" promptText="Tìm kiếm căn hộ..."/>
                <Button text="Tìm" onAction="#onSearch"/>
                <Button text="Tải lại" onAction="#onRefresh"/>
                <Button text="Thêm mới" onAction="#onAdd"/>
            </HBox>

            <TableView fx:id="tableApartments" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60">
                        <cellValueFactory>
                            <PropertyValueFactory property="householdId"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colRoom" text="Số căn hộ" prefWidth="120">
                        <cellValueFactory>
                            <PropertyValueFactory property="roomNumber"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colArea" text="Diện tích (m²)" prefWidth="120">
                        <cellValueFactory>
                            <PropertyValueFactory property="area"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colOwner" text="Chủ hộ (ID)" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="ownedBy"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
