<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <HBox layoutX="50.0" layoutY="50.0" spacing="30" alignment="CENTER">
        <!-- Vòng tròn trắng bên trái -->
        <StackPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 100; -fx-border-color: #cccccc; -fx-border-radius: 100; -fx-border-width: 2;">
            <Label text="LOGO" style="-fx-font-size: 20px; -fx-text-fill: #666666;" />
        </StackPane>

        <!-- Phần form đăng nhập -->
        <VBox spacing="15" prefWidth="250">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Đăng nhập" />

            <VBox spacing="5">
                <Label text="Email" style="-fx-font-weight: bold;" />
                <TextField fx:id="emailField" prefWidth="250" promptText="Nhập email của bạn" style="-fx-padding: 8;" />
            </VBox>

            <VBox spacing="5">
                <Label text="Mật khẩu" style="-fx-font-weight: bold;" />
                <PasswordField fx:id="passwordField" prefWidth="250" promptText="Nhập mật khẩu" style="-fx-padding: 8;" />
            </VBox>

            <Button fx:id="loginButton" prefWidth="250" prefHeight="35"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-weight: bold;"
                    text="Đăng nhập" />

            <!-- Link Quên mật khẩu và Đăng ký -->
            <HBox alignment="CENTER" spacing="30">
                <Hyperlink fx:id="forgotPasswordLink" text="Quên mật khẩu?" style="-fx-text-fill: #007bff;" />
                <Hyperlink fx:id="registerLink" text="Đăng ký tài khoản" style="-fx-text-fill: #007bff;" />
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>